<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"

    tools:context=".uis.activities.TaskDetailActivity">

    <RelativeLayout
        android:layout_margin="8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnBack"
            android:layout_alignParentLeft="true"
            android:background="@drawable/left_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btnEdit"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Edit"
            android:background="@drawable/custom_bg_task"
            />
    </RelativeLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:id="@+id/tvTaskDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="30sp"
        android:textColor="#000"
        />

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="#000"
            />
        <ToggleButton
            android:layout_marginLeft="16dp"
            android:id="@+id/btnIsDoneDetail"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/toggle"
            android:text=""
            android:textOff=""
            android:textOn=""
            />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/tvTaskDetailIsDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Done"
        android:textSize="25sp"
        android:textColor="#000"
        />

</LinearLayout>